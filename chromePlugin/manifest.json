{
    "name": "Bookmark",
    "description" : "Bookmark manage service",
    "version": "1.0",
    "manifest_version": 2,

    "icons":
    {
      "16": "img/icon.png",
      "48": "img/icon.png",
      "128": "img/icon.png"
    },

    "browser_action": 
    {
      "default_popup": "pages/popup.html",
      "default_icon": "img/icon.png"
    },
    "permissions": [
      "bookmarks",  "contextMenus", "tabs"
    ],
    "background": {
      "page": "pages/background.html",
      "persistent": true
    }
}